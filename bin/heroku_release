#!/usr/bin/env ruby

require 'fileutils'

include FileUtils

APP_ROOT = File.expand_path('..', __dir__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  puts "\n== Create database =="
  system! 'bin/rails db:schema:load'

  puts "\n== Migrate database =="
  system! 'bin/rails db:migrate'
end
