<div class="card text-white bg-light mb-3 mt-5">
  <div class="card-body">
    <%= form_with(model: @form, url: scrapes_path, method: :post, html: { name: 'links-scraper-form' }) do |form| %>
      <div class="form-group">
        <%= label_tag(:email) %>
        <%= email_field_tag(:email, nil, name: "uri[email]", placeholder: 'So that we can email you the results', class: 'form-control', required: true) %>
      </div>

      <div class="form-group">
        <%= form.label(:host) %>
        <%= form.text_field(:host, placeholder: 'https://www.example.com', class: 'form-control', required: true) %>
      </div>

      <div class="form-group">
        <%= label_tag(:depth) %>
        <%= select_tag(:depth, options_for_select([[0, 0], [1, 1]], 0), name: 'uri[depth]', class: 'form-control') %>
      </div>

      <%= form.submit(:'fetch me all links', class: 'btn btn-primary') %>
    <% end %>
  </div>
</div>
